= form_for @contact_u do |f|
  - if @contact_u.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contact_u.errors.count, "error")} prohibited this contact_u from being saved:"
      %ul
        - @contact_u.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, required: true, placeholder: "Name"
  .field
    = f.label :email
    = f.text_field :email, required: true, placeholder: "Email"
  .field
    = f.label :message
    = f.text_area :message, required: true, placeholder: "Type your message here"
  .actions
    = f.submit 'Save'
